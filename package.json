		"babel-loader": "^9.1.2",
		"cross-env": "^7.0.3",
		"cross-fetch": "^3.1.5",
		"css-loader": "^6.7.3",
		"html-webpack-plugin": "^5.5.0",
		"sass": "^1.60.0",
		"sass-loader": "^13.2.2",
		"source-map-loader": "^4.0.1",
		"style-loader": "^3.3.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"webpack": "^5.77.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.13.2"
