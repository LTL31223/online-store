		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^8.0.5",
		"react-router-dom": "^6.10.0",
		"redux": "^4.2.1",
		"redux-devtools-extension": "^2.13.9"
	}
